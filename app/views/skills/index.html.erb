<%# SKILL MARKET — Tech Agent dark UI %>
<div class="bg-surface min-h-screen">
  <!-- Page Header -->
  <div class="border-b border-border bg-surface-elevated">
    <div class="container-xl mx-auto px-6 py-10">
      <div class="sys-label mb-3">// SKILL_PACKAGES :: MARKET</div>
      <div class="flex items-end justify-between gap-6">
        <div>
          <h1 class="section-title">实战技能市场</h1>
          <p class="section-subtitle mt-2">
            专业律师上传的实用技能包 — 文档模板 · AI提示词 · 办案指南
            <span class="font-mono text-primary ml-2">¥99/pkg</span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="container-xl mx-auto px-6 py-10">
    <!-- Search & Filter Row -->
    <div class="mb-8">
      <%= form_with url: skills_path, method: :get do |f| %>
        <div class="flex flex-col md:flex-row gap-3">
          <!-- Search -->
          <div class="flex-1 relative">
            <div class="absolute left-3 top-1/2 -translate-y-1/2 text-muted pointer-events-none">
              <%= lucide_icon "search", class: "w-4 h-4" %>
            </div>
            <%= f.text_field :search,
                  placeholder: "SEARCH SKILLS...",
                  class: "form-input w-full pl-10 font-mono text-sm placeholder:text-muted placeholder:tracking-wider bg-surface-elevated border-border focus:border-primary",
                  value: params[:search] %>
          </div>

          <!-- Category select -->
          <div class="md:w-56">
            <%= f.select :category,
                  options_for_select([["ALL CATEGORIES", ""]] + @categories.map { |c| [c.name.upcase, c.slug] }, params[:category]),
                  {},
                  class: "form-select w-full font-mono text-xs tracking-wider bg-surface-elevated border-border" %>
          </div>

          <button type="submit" class="btn-primary px-5 font-mono text-xs tracking-widest inline-flex items-center gap-2">
            <%= lucide_icon "sliders-horizontal", class: "w-3 h-3" %>
            <span>FILTER</span>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Category Pills -->
    <div class="flex flex-wrap gap-2 mb-10">
      <%= link_to "ALL", skills_path, class: "category-pill #{params[:category].blank? ? 'active' : ''}" %>
      <% @categories.each do |category| %>
        <%= link_to category.name.upcase, skills_path(category: category.slug),
              class: "category-pill #{params[:category] == category.slug ? 'active' : ''}" %>
      <% end %>
    </div>

    <!-- Skills Grid -->
    <% if @skills.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-px bg-border mb-10">
        <% @skills.each do |skill| %>
          <div class="skill-card p-5 bg-surface-elevated">
            <div class="flex items-start justify-between mb-4">
              <span class="skill-card-badge"><%= skill.category.name.upcase %></span>
              <div class="flex items-center gap-1 text-xs font-mono text-primary">
                <span>★</span>
                <span><%= number_with_precision(skill.rating, precision: 1) %></span>
              </div>
            </div>

            <%= link_to skill_path(skill), class: "block group" do %>
              <h3 class="font-sans text-base font-semibold text-primary mb-2 group-hover:text-primary-light transition-colors">
                <%= skill.title %>
              </h3>
            <% end %>

            <p class="text-secondary text-sm mb-5 leading-relaxed line-clamp-2">
              <%= skill.description %>
            </p>

            <div class="flex items-center gap-4 mb-4 text-xs font-mono text-muted">
              <span><%= lucide_icon "file-text", class: "w-3 h-3 inline mr-1" %><%= skill.template_count %> TEMPLATES</span>
              <span><%= lucide_icon "download", class: "w-3 h-3 inline mr-1" %><%= skill.download_count %> DL</span>
            </div>

            <div class="flex items-center justify-between pt-4 border-t border-border">
              <span class="text-xs font-mono text-muted">BY <%= skill.author_name %></span>
              <div class="flex items-center gap-3">
                <span class="font-mono font-bold text-primary text-sm">¥<%= number_with_precision(skill.price, precision: 0) %></span>
                <%= link_to "VIEW →", skill_path(skill), class: "text-xs font-mono text-primary hover:text-primary-light tracking-wider transition-colors" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <%= paginate @skills, theme: 'twitter-bootstrap-4', pagination_class: "pagination justify-content-center" %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-24 border border-border bg-surface-elevated">
        <div class="inline-flex items-center justify-center w-12 h-12 border border-border mb-6">
          <%= lucide_icon "search-x", class: "w-5 h-5 text-muted" %>
        </div>
        <div class="sys-label mb-3 justify-center flex">// NO_RESULTS</div>
        <p class="text-secondary text-base mb-2">暂无符合条件的技能包</p>
        <p class="text-xs font-mono text-muted mb-6">请尝试调整搜索条件或浏览其他分类</p>
        <%= link_to "RESET FILTERS", skills_path, class: "btn-outline btn-sm font-mono text-xs tracking-widest" %>
      </div>
    <% end %>
  </div>
</div>
