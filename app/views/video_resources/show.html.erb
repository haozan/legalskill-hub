<!-- Breadcrumb -->
<div class="bg-surface-elevated py-4 border-b border-border">
  <div class="container-xl mx-auto px-6">
    <nav class="flex items-center gap-2 text-sm text-muted">
      <%= link_to "首页", root_path, class: "hover:text-primary transition-colors" %>
      <%= lucide_icon "chevron-right", class: "w-4 h-4" %>
      <%= link_to "视频资源", video_resources_path, class: "hover:text-primary transition-colors" %>
      <%= lucide_icon "chevron-right", class: "w-4 h-4" %>
      <span class="text-primary"><%= @video.title %></span>
    </nav>
  </div>
</div>

<!-- Video Player Section -->
<section class="py-12 bg-surface">
  <div class="container-xl mx-auto px-6">
    <div class="max-w-5xl mx-auto">
      <!-- Video Header -->
      <div class="mb-8">
        <div class="flex items-center gap-2 mb-4">
          <span class="px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
            <%= @video.category.name %>
          </span>
        </div>
        <h1 class="font-serif text-3xl md:text-4xl font-bold text-primary mb-4">
          <%= @video.title %>
        </h1>
        <div class="flex flex-wrap items-center gap-6 text-sm text-muted">
          <div class="flex items-center gap-2">
            <%= lucide_icon "eye", class: "w-4 h-4" %>
            <span><%= number_with_delimiter(@video.views_count) %> 次观看</span>
          </div>
          <% if @video.duration.present? %>
            <div class="flex items-center gap-2">
              <%= lucide_icon "clock", class: "w-4 h-4" %>
              <span><%= @video.duration %></span>
            </div>
          <% end %>
          <div class="flex items-center gap-2">
            <%= lucide_icon "calendar", class: "w-4 h-4" %>
            <span><%= @video.created_at.strftime("%Y年%m月%d日") %></span>
          </div>
        </div>
      </div>

      <!-- Video Player -->
      <div class="aspect-video bg-surface-elevated rounded-2xl overflow-hidden shadow-xl border border-border mb-8">
        <% if @video.bilibili_url.present? %>
          <iframe 
            src="<%= @video.bilibili_url %>" 
            class="w-full h-full"
            scrolling="no" 
            border="0" 
            frameborder="no" 
            framespacing="0" 
            allowfullscreen="true">
          </iframe>
        <% else %>
          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/5 to-secondary/5">
            <%= lucide_icon "video", class: "w-20 h-20 text-muted mb-4" %>
            <p class="text-muted">视频播放器</p>
          </div>
        <% end %>
      </div>

      <!-- Video Description -->
      <div class="card card-elevated p-8 mb-8">
        <h2 class="font-serif text-2xl font-bold text-primary mb-4">课程简介</h2>
        <div class="prose prose-lg max-w-none text-secondary">
          <p>该视频课程由资深律师录制，深入浅出地讲解<%= @video.category.name %>领域的核心知识与实务技巧。</p>
        </div>
      </div>

      <!-- Related Videos -->
      <% if @related_videos.any? %>
        <div class="mt-16">
          <h2 class="font-serif text-2xl font-bold text-primary mb-6">相关推荐</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <% @related_videos.each do |video| %>
              <div class="video-card">
                <div class="video-thumbnail">
                  <img src="https://images.unsplash.com/photo-1505664194779-8beaceb93744?w=600&h=400&fit=crop" 
                       alt="<%= video.title %>" 
                       class="w-full h-full object-cover">
                  <%= link_to video_resource_path(video), class: "absolute inset-0 flex items-center justify-center bg-surface/20 hover:bg-surface/40 transition-colors" do %>
                    <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center shadow-lg">
                      <%= lucide_icon "play", class: "w-6 h-6 text-surface ml-1" %>
                    </div>
                  <% end %>
                  <% if video.duration.present? %>
                    <div class="absolute top-3 right-3 px-2 py-1 bg-surface/90 backdrop-blur-sm rounded-full text-xs font-medium text-primary">
                      <%= video.duration %>
                    </div>
                  <% end %>
                </div>
                <div class="card-body">
                  <%= link_to video_resource_path(video) do %>
                    <h3 class="font-serif text-lg font-semibold text-primary mb-2 hover:text-primary-dark transition-colors line-clamp-2">
                      <%= video.title %>
                    </h3>
                  <% end %>
                  <div class="flex items-center gap-2 text-muted text-xs">
                    <%= lucide_icon "eye", class: "w-3 h-3" %>
                    <span><%= number_with_delimiter(video.views_count) %> 次</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
