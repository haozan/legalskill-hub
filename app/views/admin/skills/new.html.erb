<% content_for :title, "New Skill" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_skills_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Skills
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Skill</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @skill], local: true, class: "space-y-6" do |form| %>
        <!-- Title -->
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Enter title..." %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: 5, placeholder: "Enter description..." %>
        </div>

        <!-- Price -->
        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, placeholder: "Enter price..." %>
        </div>

        <!-- Author name -->
        <div class="form-group">
          <%= form.label :author_name %>
          <%= form.text_field :author_name, placeholder: "Enter author name..." %>
        </div>

        <!-- Template count -->
        <div class="form-group">
          <%= form.label :template_count %>
          <%= form.number_field :template_count, placeholder: "Enter template count..." %>
        </div>

        <!-- Download count -->
        <div class="form-group">
          <%= form.label :download_count %>
          <%= form.number_field :download_count, placeholder: "Enter download count..." %>
        </div>

        <!-- Rating -->
        <div class="form-group">
          <%= form.label :rating %>
          <%= form.number_field :rating, placeholder: "Enter rating..." %>
        </div>

        <!-- Slug -->
        <div class="form-group">
          <%= form.label :slug %>
          <%= form.text_field :slug, placeholder: "Enter slug..." %>
        </div>

        <!-- Category -->
        <div class="form-group">
          <%= form.label :category_id, "Category" %>
          <%= form.select :category_id,
              options_for_select([['Select Category', '']] + Category.all.map { |item| [item.name, item.id] }, @skill.category_id) %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_skills_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Skill", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>