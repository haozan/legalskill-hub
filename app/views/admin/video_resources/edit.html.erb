<% content_for :title, "Edit Video resource" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_video_resources_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Video resources
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Video resource</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @video_resource], local: true, class: "space-y-6" do |form| %>
        <!-- Title -->
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Enter title..." %>
        </div>

        <!-- Bilibili url -->
        <div class="form-group">
          <%= form.label :bilibili_url %>
          <%= form.text_field :bilibili_url, placeholder: "Enter bilibili url..." %>
        </div>

        <!-- Cover Image -->
        <div class="form-group">
          <%= form.label :cover_image, "封面图片 URL（手动填写优先；留空则自动从B站抓取）" %>
          <%= form.text_field :cover_image, placeholder: "输入封面图片链接..." %>
          <% if @video_resource.cover_image.present? %>
            <div class="mt-3">
              <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">当前封面预览：</p>
              <img src="<%= @video_resource.cover_image %>"
                   alt="封面预览"
                   class="w-48 h-28 object-cover rounded border border-gray-300 dark:border-gray-600"
                   referrerpolicy="no-referrer"
                   onerror="this.style.display='none';this.nextElementSibling.style.display='block';">
              <p class="text-xs text-red-500 hidden">封面图片加载失败，请检查链接是否有效</p>
            </div>
          <% else %>
            <p class="text-xs text-yellow-600 dark:text-yellow-400 mt-1">⚠️ 当前无封面图，保存后将自动从B站链接抓取</p>
          <% end %>
        </div>

        <!-- Duration -->
        <div class="form-group">
          <%= form.label :duration %>
          <%= form.text_field :duration, placeholder: "Enter duration..." %>
        </div>

        <!-- Views count -->
        <div class="form-group">
          <%= form.label :views_count %>
          <%= form.number_field :views_count, placeholder: "Enter views count..." %>
        </div>

        <!-- Category -->
        <div class="form-group">
          <%= form.label :category_id, "Category" %>
          <%= form.select :category_id,
              options_for_select([['Select Category', '']] + Category.all.map { |item| [item.name, item.id] }, @video_resource.category_id) %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_video_resource_path(@video_resource.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Video resource", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
