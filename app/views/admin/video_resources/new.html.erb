<% content_for :title, "New Video resource" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_video_resources_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Video resources
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Video resource</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @video_resource], local: true, class: "space-y-6" do |form| %>
        <!-- Title -->
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Enter title..." %>
        </div>

        <!-- Bilibili url -->
        <div class="form-group">
          <%= form.label :bilibili_url %>
          <%= form.text_field :bilibili_url, placeholder: "Enter bilibili url..." %>
        </div>

        <!-- Cover Image -->
        <div class="form-group">
          <%= form.label :cover_image, "Cover Image URL" %>
          <%= form.text_field :cover_image, placeholder: "Enter cover image URL..." %>
        </div>

        <!-- Duration -->
        <div class="form-group">
          <%= form.label :duration %>
          <%= form.text_field :duration, placeholder: "Enter duration..." %>
        </div>

        <!-- Views count -->
        <div class="form-group">
          <%= form.label :views_count %>
          <%= form.number_field :views_count, placeholder: "Enter views count..." %>
        </div>

        <!-- Category -->
        <div class="form-group">
          <%= form.label :category_id, "Category" %>
          <%= form.select :category_id,
              options_for_select([['Select Category', '']] + Category.all.map { |item| [item.name, item.id] }, @video_resource.category_id) %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_video_resources_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Video resource", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>